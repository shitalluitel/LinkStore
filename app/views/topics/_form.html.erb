<div class="row">
  <div class="col-md-8 col-md-offset-2  ">

    <% if @topic.errors.any? %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <ul>
            <% @topic.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="well">
      <%= form_for @topic do |f| %>
          <div class="form-horizontal">
            <div class="form-group">
              <label class="control-label col-md-3">Category<span class="text-danger">*</span></label>
              <div class="col-md-9">
                <%= f.collection_select :category_id, @category_list, :id, :name, {prompt: "Select Category"}, :class => "form-control select" %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-3">Name <span class="text-danger">*</span></label>
              <div class="col-md-9">
                <%= f.text_field :name, :class=>"form-control", :placeholder => "Youtube" %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-3">Description </label>
              <div class="col-md-9">
                <%= f.text_area :description,:rows => 4, :style => "resize: none;", :class=>"form-control", :placeholder => "Links related to videos." %>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-3">Favorite </label>
              <div class="col-md-9">
                <div class="check-box">
                  <%= f.check_box :favorite %>
                </div>
              </div>
            </div>


            <div class="form-group">
              <div class="col-md-offset-3 col-md-4">
                <%= f.submit "Submit", :class => "btn btn-primary"%>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>